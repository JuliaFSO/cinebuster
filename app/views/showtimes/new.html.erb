<div class="container d-flex justify-content-center">
    <div class="w-50 justify-content-center p-5">
      <h1>Anuncie nova sessão</h1>
      <%= simple_form_for (@showtime) do |f| %>
      <%= f.input :session_time, label: 'Data e horário', input_html: { class:'form-control form-control-sm' } %>
      <%= f.input :room, label: 'Sala', input_html: { class:'form-control form-control-sm' }  %>
      <%= f.input :price, label: 'Preço', input_html: { class:'form-control form-control-sm' } %>
      <%= f.button :submit, 'ANUNCIE NOVA SESSÃO', class:'btn mb-2 btn-block' %>

      <% end %>
    </div>
</div>

